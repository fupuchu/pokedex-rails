<h1>Edit Crafter</h1>

<%= form_with(model: @crafter, local: true) do |form| %>

  <p>
    <%= form.label :crafter_class %><br>
    <%= form.text_field :crafter_class %>
  </p>

  <p>
    <%= form.label :short_name %><br>
    <%= form.text_field :short_name %>
  </p>

  <p>
    <%= form.label :img %><br>
    <%= form.text_field :img %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', crafters_path %>